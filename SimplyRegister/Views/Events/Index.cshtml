@model IEnumerable<SimplyRegister.Models.Event>

@{
    ViewBag.Title = "Index";
}

<h2>List of Events</h2>
@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.eventName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.eventDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.eventType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.corporatePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.assocaitePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cbaPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.iapPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nonMemberPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.eventName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.eventDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.eventType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.corporatePrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.assocaitePrice)
        </td>
        <td>
            @if (item.cbaPrice == 0)
            {
                @Html.DisplayName("Members Only")
            }
            else {
            @Html.DisplayFor(modelItem => item.cbaPrice)
            }
        </td>
        <td>
            @if (item.iapPrice == 0)
            {
                @Html.DisplayName("Members Only")
            }
            else
            {
                @Html.DisplayFor(modelItem => item.iapPrice)
            }
        </td>
        <td>
            @if (item.nonMemberPrice == 0)
            {
                @Html.DisplayName("Members Only")
            }
            else
            { 
                @Html.DisplayFor(modelItem => item.nonMemberPrice)
            }
         </td>

        @*<td>
            <p><a class="btn btn-default" href="..\Customers\EventRegister">Register &raquo;</a></p>
        </td>*@
       
        
        
        
         <td>
            @Html.ActionLink("Register", "RegisterCustomer","Events", new { id=item.eventId }, null) 


             @*@Html.ActionLink("Edit", "Edit", new { id = item.eventId }) |*@

            @*@Html.ActionLink("Details", "Details", new { id=item.eventId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.eventId })*@
        </td>
    </tr>
}

</table>
