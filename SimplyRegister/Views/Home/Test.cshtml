                <li><a href="#">Computer</a></li>
            </ul>
        <li><a href="#">Contact</a></li>
    </ul>
</div>




<div class="form-group">
        @Html.DropDownListFor(c => c.companyMembershipLevel, new List<SelectListItem>
                { new SelectListItem{Text="Corporate", Value="Corporate"},
                 new SelectListItem{Text="Associate", Value="Associate"},
                 new SelectListItem{Text="CBA", Value="CBA"},
                 new SelectListItem{Text="IAP", Value="IAP"},
                 new SelectListItem{Text="Non-Member", Value="Non-Member"},
   }, "Select Company Membership Level")
</div>
